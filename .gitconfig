[merge]
	ff = only
	renamelimit = 1000
	tool = smerge

[gc]
	auto = 256

[pull]
	ff = true
	rebase = true

[receive]
	fsckObjects = true

[diff]
	algorithm = histogram

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = blue

[color "status"]
	added = green
	changed = blue
	untracked = cyan
	deleted = red

[mergetool "smerge"]
	cmd = smerge mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"MERGED\"
	trustExitCode = true
